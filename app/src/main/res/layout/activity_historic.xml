<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".controller.HistoricActivity">

    <TextView
        android:id="@+id/activity_historic_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="24dp"
        android:textAlignment="center"
        android:text="Tableau des scores" />

    <Button
        android:id="@+id/activity_historic_score_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/activity_historic_text_view"
        android:text="Par score" />

    <Button
        android:id="@+id/activity_historic_abc_order_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_historic_text_view"
        android:layout_toRightOf="@id/activity_historic_score_order_button"
        android:text="Par ordre alphabÃ©tique" />

    <Button
        android:id="@+id/activity_historic_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:text="Retour"/>

</RelativeLayout>